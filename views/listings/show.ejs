<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
       <div class="col-8 offset-2">

    <h3>Listing Details :</h3>

    <div class="card col-6 offset-2">
      <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60' %>" class="card-img-top show-img" alt="listing_image" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br>
          <%= listing.description %>  <br>
          &#8377; <%= listing.price.toLocaleString("en-IN")%>   <br>
          <%= listing.location %>   <br>
          <%= listing.country %>   <br>
        </p>
      </div>
    </div>
    
    <br />
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark show-btn col-1 offset-2">Edit</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark  offset-4">Delete</button>
    </form>
    </div>
  </div>
</div>
  </body>

